# Ambiente de Desenvolvimento Local - CobrançaAuto SaaS
# Este arquivo deve ser usado para desenvolvimento local com Docker

# CONFIGURAÇÕES BÁSICAS

APP_NAME="CobrançaAuto"
APP_ENV=local
APP_KEY=base64:YOUR_APP_KEY_HERE
APP_DEBUG=true
APP_URL=http://localhost:8000

# BANCO DE DADOS (MySQL via Docker)

DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=cobranca
DB_USERNAME=cobranca
DB_PASSWORD=__SET_IN_SERVER_ONLY__

# EVOLUTION API (WhatsApp) - Desenvolvimento

EVOLUTION_API_URL=http://localhost:8081
EVOLUTION_API_KEY=dev_api_key_here
EVOLUTION_INSTANCE_NAME=cobrancaauto-dev
EVOLUTION_INSTANCE_TOKEN=dev_instance_token_here

# STRIPE (Pagamentos) - Sandbox

STRIPE_KEY=pk_test_your_stripe_public_key_here
STRIPE_SECRET=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
STRIPE_CURRENCY=brl
STRIPE_WEBHOOK_URL=http://localhost:8000/stripe/webhook

# Preços dos planos (em centavos)
STRIPE_PRICE_BASIC=9700
STRIPE_PRICE_PRO=29700
STRIPE_PRICE_ENTERPRISE=99700

# Trial grátis de 7 dias
STRIPE_TRIAL_DAYS=7

# VAULT (Segurança) - Desenvolvimento

VAULT_ADDR=http://localhost:8200
VAULT_TOKEN=dev_vault_token_here
VAULT_KV_PATH=secret/cobrancaauto

# EMAIL - Log para desenvolvimento

MAIL_MAILER=log
MAIL_HOST=null
MAIL_PORT=null
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=noreply@cobrancaauto.local
MAIL_FROM_NAME="${APP_NAME}"

# QUEUE

QUEUE_CONNECTION=database
QUEUE_FAILED_TABLE=failed_jobs

# CACHE

CACHE_DRIVER=file

# SESSION

SESSION_DRIVER=file
SESSION_LIFETIME=120

# REDIS (opcional para desenvolvimento)

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# MONITORAMENTO - Desativado em desenvolvimento

SENTRY_DSN=
SENTRY_ENVIRONMENT=local
SENTRY_TRACES_SAMPLE_RATE=0.1

# LANCAMENTO

LAUNCH_DATE=2026-01-28
LAUNCH_TARGET_SALES=50
LAUNCH_TARGET_MRR=14850
LAUNCH_TARGET_LEADS=500
LAUNCH_TARGET_CONVERSION_RATE=10
LAUNCH_TARGET_CAC=50
LAUNCH_TARGET_ROAS=300

# CONTATOS

SUPPORT_WHATSAPP=5511999999999
SUPPORT_EMAIL=contato@cobrancaauto.local
SUPPORT_PHONE=+5511999999999

DEVELOPER_WHATSAPP=5511888888888
DEVELOPER_EMAIL=dev@cobrancaauto.local

MARKETING_WHATSAPP=5511777777777
MARKETING_EMAIL=marketing@cobrancaauto.local

SALES_WHATSAPP=5511666666666
SALES_EMAIL=vendas@cobrancaauto.local

# MULTI-TENANCY

TENANCY_ENABLED=true

# NOTAS

# IMPORTANTE:
# 1. Este arquivo é para desenvolvimento local com Docker
# 2. Para produção, use o arquivo .env.production
# 3. Execute: docker-compose -f docker-compose.dev.yml up -d
# 4. Rode as migrations: docker-compose -f docker-compose.dev.yml exec app php artisan migrate
# 5. Rode os seeders: docker-compose -f docker-compose.dev.yml exec app php artisan db:seed

# URLS DE ACESSO LOCAL:
# - Aplicação: http://localhost:8000
# - API: http://localhost:8000/api
# - phpMyAdmin: http://localhost:8080
